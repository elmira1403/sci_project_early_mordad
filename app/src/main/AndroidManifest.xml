<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ir.elmirayafteh.spinalcordinjury.sci"
          android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="ir.elmirayafteh.spinalcordinjury.sci.SCIApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.SignUpActivity"
            android:label="مشخصات کاربر"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.RecommendationActivity"
            android:label="@string/title_activity_recommendation"
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"/>
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.ShowCaseActivity"
            android:label=""
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.RecommendationActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.ExerciseActivity"
            android:label="@string/exercise_label"
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"/>
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.ShowExerciseActivity"
            android:label=""
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.ExerciseActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"/>
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.elmirayafteh.spinalcordinjury.sci.activities.ProfileActivity"/>
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.ChangePasswordActivity"
            android:label="@string/action_change_password"
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.elmirayafteh.spinalcordinjury.sci.activities.ProfileActivity"/>
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.FavoritesActivity"
            android:label="@string/title_activity_favorite_cases"
            android:parentActivityName="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"/>
        </activity>
        <activity
            android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.HelpActivity"
            android:label="@string/action_help"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="ir.elmirayafteh.spinalcordinjury.sci.activities.TutorialActivity"
                  android:label="راهنمای برنامه"
                  android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.elmirayafteh.spinalcordinjury.sci.activities.MainActivity"/>
        </activity>
    </application>

</manifest>